<table class="table table-striped" cellpadding="0" cellspacing="0" width="100%">
  <thead hidden>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Carnet</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

      <tr>
        <td hidden><%= student.id %></td>
        <td width="30%", style='color:BLUE;'><%= student.firstName%></td>
        <td width="30%", style='color:BLUE;'><%= student.lastName%></td>
        <td width="30%"><%= student.carnet %></td>
        <td width="10%">
          <%= link_to "Edit", edit_student_path(student), :class => 'btn btn-mini' %>
          <%= link_to "Delete", student_path(student), :method => :delete, data: {:confirm => 'Are you sure?'}, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>

  </tbody>
</table>
